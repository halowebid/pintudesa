  "scripts": {
    "build": "bun next build",
    "dev": "bun next dev --turbopack",
    "start": "bun next start",
    "clean": "bun run git clean -xdf .cache .next *.log",
    "clean:deps": "bun run git clean -xdf node_modules",
    "clean:all": "bun run clean && bun run clean:deps",
    "db:check": "drizzle-kit check",
